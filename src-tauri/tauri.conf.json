  "productName": "Skill Deck",
  "version": "../package.json",
  "identifier": "com.skill-deck.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:15673",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Skill Deck",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
